{
	"manifest_version": 3,
	"name": "EarthMC Dynmap+",
	"version": "1.10",
	"author": "3meraldK",
	"description": "Extension to enrich the EarthMC Dynmap experience",

    "web_accessible_resources": [{
        "resources": ["main.js"],
        "matches": [ "<all_urls>" ]
    }],

	"icons": {
		"48": "48.png",
		"256": "256.png"
	},

	"content_scripts": [
		{
			"matches": ["https://earthmc.net/map/nova/", "https://earthmc.net/map/aurora/", "https://earthmc.net/map/nova/?*", "https://earthmc.net/map/aurora/?*"],
			"js": ["content.js"]
		}
	],

	"host_permissions": [
		"https://earthmc.net/map/*",
		"https://emc-toolkit.vercel.app/api/*"
	]
}